# SwiftCMS Environment Configuration
# Copy to .env and modify for your environment

# ─── Database ──────────────────────────────────────────────────
DATABASE_URL=postgresql://swiftcms:swiftcms@localhost:5432/swiftcms
DB_POOL_SIZE=10

# ─── Redis ─────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379
REDIS_POOL_SIZE=5

# ─── Authentication ────────────────────────────────────────────
# Options: auth0, firebase, local
AUTH_PROVIDER=local

# Auth0 (required if AUTH_PROVIDER=auth0)
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.example.com

# Local JWT (required if AUTH_PROVIDER=local)
JWT_SECRET=change-me-to-a-secure-random-string

# ─── Search ────────────────────────────────────────────────────
MEILI_URL=http://localhost:7700
MEILI_KEY=masterKey

# ─── Storage ───────────────────────────────────────────────────
# Options: local, s3
STORAGE_PROVIDER=local

# S3 (required if STORAGE_PROVIDER=s3)
S3_BUCKET=swiftcms-media
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ─── Application ───────────────────────────────────────────────
APP_URL=http://localhost:8080
ALLOWED_ORIGINS=*

# ─── Admin Seed ────────────────────────────────────────────────
ADMIN_EMAIL=admin@swiftcms.dev
ADMIN_PASSWORD=admin123
